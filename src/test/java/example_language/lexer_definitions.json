{
  "tokens": [
    {
      "name": "whitespace",
      "pattern": "\\s+",
      "keepInAST": false
    },
    {
      "name": "identifier",
      "pattern": "[a-zA-Z_][a-zA-Z_0-9]*"
    },
    {
      "name": "number",
      "pattern": "[0-9]+(\\.[0-9]+)?"
    },
    {
      "name": "if",
      "literal": "if"
    },
    {
      "name": "else",
      "literal": "else"
    },
    {
      "name": "assignment",
      "pattern": "="
    },
    {
      "name": "op",
      "pattern": "\\+|-|\\*|/"
    },
    {
      "name": "compop",
      "pattern": "< | > | == | <= | >="
    },
    {
      "name": "Single line comment",
      "customMatcher": "singleLineCommentMatcher",
      "keepInAST": false
    },
    {
      "name": "Multi line comment",
      "customMatcher": "multiLineCommentMatcher",
      "keepInAST": false
    }
  ]
}